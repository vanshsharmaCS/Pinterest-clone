<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='../stylesheets/index.css' />
    <title>Pinterest Login</title>
    <script></script>
  </head>
  <body>
    <div class="container">
      <div class="content">
        <!--pinterest logo-->
        <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="img1" />
        <p class="header">Already sign</p>
        <form action="/login" method="post">
        <input type="text" name="username" placeholder="username" class="detail" /><br />
        <input type="password" name="password" placeholder="password" class="detail" /><br />
        <% if(error.length>0){
            error.forEach(function(err){
                %>
                <p style="color:red;"><%= err %></p>
                <%
            })
        }%>
        <input type="submit" value="Log In" class="btn int"></input>

        </form>
        <a href="/forgot">Forgot your password?</a>

        <p class="or">OR</p>
        <button class="btn fbk">
          <i
            class="fab fa-facebook fa-lg"
            style="color: white; padding-right: 10px"
          ></i
          ><a href="#">Continue with Facebook</a></button
        ><br />
        <button class="btn ggl">
          <i
            class="fab fa-google"
            style="color: rgb(11, 241, 22); padding-right: 10px"
          ></i
          ><a href="#">Continue with Google</a>
        </button>

        <footer>
          <p>
            By continuing, you agree to Pinterest's
            <b>Terms of Service, Privacy policy.</b>
          </p>
          <hr />
          <a href="/logout">Not on Pinterest yet? Sign in</a>
        </footer>
      </div>
    </div>
  </body>
</html>
